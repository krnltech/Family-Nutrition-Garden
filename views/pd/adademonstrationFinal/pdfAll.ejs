<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>শ্রমিকের তথ্য</title>

    <style>
      .flex-container {
        display: flex;

        justify-content: center;
      }
      .table,
      td,
      th {
        border: 1px solid black;
      }
      .table {
        width: 100%;
        border-collapse: collapse;
      }
      .center {
        text-align: center;
      }
      .inline-block-child {
        display: inline-block;
      }
    </style>
  </head>
  <body>
    <div
      style="
        margin-top: 5px;
        padding-top: 5px;
        padding-bottom: 5px;
        background-color: #ffffffa6;
      "
      class="center"
    >
      <div>
        <div
          style="
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            justify-content: space-between;
          "
        >
          <div
            style="height: 80px; width: 80px; max-height: 80px; max-width: 80px"
          >
            <img
              src="/landingPage/images/daelogo.png"
              alt="DAE"
              style="height: 100%; width: 100%; object-fit: contain"
            />
          </div>
          <div>
            <h1>গণপ্রজাতন্ত্রী বাংলাদেশ সরকার</h1>
            <h2>কৃষি সম্প্রসারণ অধিদপ্তর</h2>
            <h3>হর্টিকালচার উইং</h3>
            <h2>শ্রমিকের তথ্য</h2>
          </div>
          <div
            style="height: 80px; width: 80px; max-height: 80px; max-width: 80px"
          >
            <img
              src="/landingPage/images/bdlogo.png"
              alt="Homepage"
              style="height: 100%; width: 100%; object-fit: contain"
            />
          </div>
        </div>
        <!-- <p><b>সেন্টার :</b>সকল সেন্টারের তথ্য</p> -->
        <div
          style="
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            justify-content: space-between;
          "
        >
          <p>স্মারক নংঃ</p>
          <p>তারিখঃ <%= new Date().toLocaleDateString();%></p>
        </div>
        <%if (centers.length >0){ %>
        <style>
          table,
          th,
          td {
            border: 1px solid black;
            border-collapse: collapse;
          }
          th,
          td {
            padding: 5px;
            text-align: left;
          }
        </style>
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>ক্রমিক নং</th>
              <th>সেন্টারের নাম</th>
              <th>পদবী</th>
              <th>নাম</th>
              <th>পিতার নাম</th>
              <th>ঠিকানা</th>
              <th>মোবাইল নং</th>
              <th>যোগদানের তারিখ</th>
              <th>এনআইডি নং</th>
              <th>ব্যাংক একাউন্ট নং</th>
            </tr>
          </thead>
          <tbody>
            <% centers.forEach(function(center,index){ %> <% var indexes=0%> <%
            var centerIndex=0;%> <% workerinfos.forEach(function(row){ %> <% if
            (center.id === row.center_id){%> <% centerIndex +=1;%> <%}}) %> <%
            workerinfos.forEach(function(row){ %> <% if (center.id ===
            row.center_id){%> <% if (indexes === 0){%>
            <tr>
              <td rowspan="<%=centerIndex%>"><%=index%></td>
              <td rowspan="<%=centerIndex%>"><%=center.center %></td>
              <td><%= row.podobi %></td>
              <td><%= row.name %></td>
              <td><%= row.fname %></td>
              <td><%= row.address %></td>
              <td><%= row.mobile %></td>
              <td><%= row.date %></td>
              <td><%= row.nid %></td>
              <td><%= row.bank %></td>
            </tr>
            <% indexes+=1%> <%}else{%>
            <tr>
              <td><%= row.podobi %></td>
              <td><%= row.name %></td>
              <td><%= row.fname %></td>
              <td><%= row.address %></td>
              <td><%= row.mobile %></td>
              <td><%= row.date %></td>
              <td><%= row.nid %></td>
              <td><%= row.bank %></td>
            </tr>
            <%} %> <%}}) %> <% }) %>
          </tbody>
        </table>
        <% }else{ %>
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>ক্রমিক নং</th>
              <th>সেন্টারের নাম</th>

              <th>পদবী</th>
              <th>নাম</th>
              <th>পিতার নাম</th>
              <th>ঠিকানা</th>
              <th>মোবাইল নং</th>
              <th>যোগদানের তারিখ</th>
              <th>এনআইডি নং</th>
              <th>ব্যাংক একাউন্ট নং</th>
            </tr>
          </thead>
          <tbody>
            <% centers.forEach(function(center){ %>
            <tr>
              <td colspan="10">No data Found</td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>
    </div>
  </body>
</html>
