<%- include('../../includes/header')-%>
        <div class="wrapper">
          <%- include('../../includes/topbar')-%>
            <div class="page-wrap">
              <%- include('../../includes/sidebar')-%>
              <div class="main-content">
                <div class="container-fluid">
                    <div class="row clearfix">
                    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <div class="panel-title"><h2>কৃষক প্রশিক্ষণ তথ্য ফর্ম</h2></div>
                                <p><%
                                if(success !=''){ %>
                                <%= success %>
                                    <% } %>
                                </p>
                                </div>  
                            <div class="panel-body" >
                                <form action="/upazilla/trainedFarmerFormEditPost/<%= records.id %>" id="FieldTrialForm" class="form-horizontal" method="post"  role="form">
                                    <div id="signupalert" style="display:none" class="alert alert-danger">
                                        <p>Error:</p>
                                        <span></span>
                                    </div>

                                    <div class="form-group">
                                        <label for="topic" class="col-md-3 control-label">প্রশিক্ষণের বিষয়</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="topic" placeholder="প্র্রশিক্ষণের বিষয়" value="<%=records.topic%>">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="target" class="col-md-3 control-label">প্রশিক্ষণের লক্ষ্যমাত্রা(ব্যাচ)  </label>
                                        <div class="col-md-9">
                                            <input type="number" class="form-control" name="target" placeholder="প্র্রশিক্ষণের লক্ষ্যমাত্রা(ব্যাচ)" value="<%=records.target%>">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="achieved" class="col-md-3 control-label">প্রশিক্ষণের অর্জন(ব্যাচ)</label>
                                        <div class="col-md-9">
                                            <input type="number" class="form-control" name="achieved" placeholder="প্র্রশিক্ষণের অর্জন(ব্যাচ)" value="<%=records.achieved%>">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="name" class="col-md-3 control-label">কৃষক/কৃষাণীর নাম,ঠিকানা,পরিচিতি নম্বর ও মোবাইল নং</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="name" placeholder="কৃষক/কৃষাণীর নাম,ঠিকানা,পরিচিতি নম্বর ও মোবাইল নং" value="<%=records.name%>">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="date" class="col-md-3 control-label">প্রশিক্ষণ শুরুর তারিখ</label>
                                        <div class="col-md-9">
                                            <input type="date" class="form-control" name="date" placeholder="প্রশিক্ষণ শুরুর তারিখ" value="<%=records.date%>">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="finishDate" class="col-md-3 control-label">প্রশিক্ষণ সমাপ্তির তারিখ</label>
                                        <div class="col-md-9">
                                            <input type="date" class="form-control" name="finishDate" placeholder="প্রশিক্ষণ সমাপ্তির তারিখ" value="<%=records.date%>">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="date" class="col-md-3 control-label">প্রশিক্ষক/রিসোর্স পারসনের নাম ও পদবী</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="resource" placeholder="প্রশিক্ষক/রিসোর্স পারসনের নাম ও পদবী" value="<%=records.date%>">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="finishDate" class="col-md-3 control-label">প্রশিক্ষণ সম্বন্ধে কৃষক/কৃষাণীর মন্তব্য/ফিডব্যাক</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="feedback" placeholder="প্রশিক্ষণ সম্বন্ধে কৃষক/কৃষাণীর মন্তব্য/ফিডব্যাক" value="<%=records.date%>">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-9">
                                            <input type="hidden" class="form-control" name="user_id" placeholder="id" value="<%= user_id %>">
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <!-- Button -->                                        
                                        <div class="col-md-offset-3 col-md-9">
                                        <input type="submit" name="submit" value="submit" class="btn btn-primary">   
                                        </div>
                                    </div>
                                    
                                    
                                        
                                    
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../../includes/footer')-%>