<%- include('../../includes/header')-%>
        <div id="wrapper" class="wrapper" >
            <%- include('../../includes/topbar')-%>
            <div class="page-wrap">
                <%- include('../../includes/sidebar')-%>
                <div class="main-content">
                    <div class="container-fluid">
                        <div class="row clearfix">
                            <div class="col-md-10">
                                <h1 class="text-center"><%= title %></h1>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-body">
                            <form action="/upazilla/trainedFarmerGalleryPost" id="FieldTrialForm" class="form-horizontal" method="post"  role="form" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label >নতুন ছবি আপ্লোড করুন</label>
                                        <input type="file" id="filename" class="form-control" name="trainedFarmer" required>
                                    </div>

                                    <div class="form-group col-md-4">
                                        <label for="district"></label>
                                        <input type="submit" name="submit" value="আপ্লোড" class="btn btn-primary">
                                    </div>
                                </div>
                            </form>
                               

                        </div>
                        </div>

                        <div class="container gallery-container">                          
                            <div class="tz-gallery">
                                <div class="row">
                                    <% records.forEach(function(row,index){ %>
                                    <div class="col-sm-12 col-md-4">
                                        <a class="lightbox" href="<%= row.image %>">
                                            <img class="chobi" src="<%= row.image %>">
                                        </a>
                                    </div>
                                    <% }) %>
                                </div>
                            </div>
                        
                        </div>



                     


                    </div>
                        
                        
                    </div>
                </div>
            </div>
        </div>


   
<%- include('../../includes/footer')-%>
<script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.js"></script>
                        <script>
                            baguetteBox.run('.tz-gallery');
                        </script>